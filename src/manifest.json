{
  "description": "Open a webpage in a new popup window",
  "author": "MrOtherGuy",
  "manifest_version": 2,
  "name": "Open Page As Popup",
  "permissions": ["activeTab","storage","cookies","contextualIdentities","sessions"],
  "optional_permissions": ["<all_urls>"],
  "version": "0.1.2",
  "icons":{
		"48": "icon.svg"
	},
  "background": {
    "scripts": ["background-script.js"]
  },
  	"options_ui": {
      "page": "options/options.html",
      "browser_style": true
  },
  "browser_action": {
    "default_title": "open popup window",
    "default_icon": {
      "16": "icon.svg"
    }
  },
  "applications": {
    "gecko": {
      "id": "openaspopup@example.com",
      "strict_min_version": "77.0"
    }
  }
}
